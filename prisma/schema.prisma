// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  // For migrations and non-pooling connections
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// User model - represents authenticated users
model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  image         String?    // Profile image from OAuth provider

  // Agent-specific fields for real estate agents
  agentLicense  String?    // Real estate license number
  agentPhone    String?    // Contact phone number

  // Relationships
  contracts     Contract[] // One user can have many contracts
  accounts      Account[]  // OAuth account connections
  sessions      Session[]  // Active sessions

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// Contract model - represents generated purchase agreements
model Contract {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Property Details
  propertyAddress String   // Full address of the property
  purchasePrice   Decimal  @db.Decimal(12, 2) // Supports up to $999,999,999.99
  downPayment     Decimal  @db.Decimal(12, 2)

  // Buyer Details
  buyerName       String
  buyerEmail      String
  buyerPhone      String

  // Transaction Details
  closeDate       DateTime // Close of escrow date

  // Agent Details (snapshot at time of contract creation)
  // We store these separately to preserve historical data
  agentName       String
  agentLicense    String
  agentPhone      String

  // Generated PDF
  pdfUrl          String?  // Vercel Blob URL for the generated PDF

  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Indexes for performance
  @@index([userId])        // Fast lookup by user
  @@index([createdAt])     // Fast sorting by date
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}